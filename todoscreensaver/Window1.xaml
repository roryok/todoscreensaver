<Window x:Class="todoscreensaver.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" KeyDown="Window_KeyDown" Background="White">
    <Grid Name="grid1" Margin="50,0,50,50" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" x:Name="Filename" FontSize="16" FontStyle="Italic" Margin="5" HorizontalAlignment="Left"></TextBlock>
            <TextBlock Grid.Row="2" x:Name="Content" FontSize="14" Margin="5" HorizontalAlignment="Left"></TextBlock>
        </Grid>
    </Grid>
</Window>
    